#
# CHEF MANAGED FILE: DO NOT EDIT
# Generated by Chef for <%= node['hostname'] %>
# Controlling Cookbook: <%= @cookbook_name %>
#
# Set this to 1 to try to switch vcl without restart.
RELOAD_VCL=1
# Main configuration file. You probably want to change it.
VARNISH_VCL_CONF=<%= @config.path_to_vcl %>

# Default address and port to bind to. Blank address means all IPv4
# and IPv6 interfaces, otherwise specify a host name, an IPv4 dotted
# quad, or an IPv6 address in brackets.
VARNISH_LISTEN_ADDRESS=<%= @config.listen_address %>
VARNISH_LISTEN_PORT=<%= @config.listen_port %>

# Admin interface listen address and port
VARNISH_ADMIN_LISTEN_ADDRESS=<%= @config.admin_listen_address %>
VARNISH_ADMIN_LISTEN_PORT=<%= @config.admin_listen_port %>

# Shared secret file for admin interface
VARNISH_SECRET_FILE=<%= @config.path_to_secret %>

# Configuration file for varnish
#
# /etc/init.d/varnish expects the variables $DAEMON_OPTS, $NFILES and $MEMLOCK
# to be set from this shell script fragment.
#

# Should we start varnishd at boot?  Set to "no" to disable.
START=<%= @config.start_on_boot ? 'yes' : 'no' %>

# Maximum number of open files (for ulimit -n)
NFILES=<%= @config.max_open_files %>

# Maxiumum locked memory size for shared memory log
MEMLOCK=<%= @config.max_locked_memory %>

# Default varnish instance name is the local nodename.  Can be overridden with
# the -n switch, to have more instances on a single server.
INSTANCE=<%= @config.instance_name || node['hostname'] %>
<%- if @config.storage == 'file' && @config.file_storage_path %>
STORAGE=<%= [@config.storage, (@config.file_storage_path % @config.name), @config.file_storage_size].compact.join(",") %>
<%- else @config.storage %>
STORAGE=<%= [@config.storage, @config.malloc_size].compact.join(",") %>
<% end %>

# Pass the Daemon options

DAEMON_OPTS="-a <%= @config.listen_address %>:<%= @config.listen_port %> \
              -f <%= @config.path_to_vcl %> \
              -T <%= @config.admin_listen_address %>:<%= @config.admin_listen_port %> \
              -u <%= @config.user %> -g <%= @config.group %> \
              -t <%= @config.ttl %> \
             <%- if node['platform_family'] == 'debian' %>
              -n $INSTANCE \
             <%- end %>
              -s $STORAGE \
              <%- unless (@config.parameters).nil? %>
                <%- @config.parameters.each do |param, value| %>
                  -p <%= param.to_s + "=" + value %> \
                <%- end %>
              <%- end %>
              -S <%= @config.path_to_secret %>"
